@model IEnumerable<ProjektStrona_EG_IG.Models.Koszyk>
<style>

    body {
        background: linear-gradient(120deg, #fefcea, #f1daff, #d6f6ff, #ffe5d9);
        background-size: 400% 400%;
        animation: gradientAnimation 15s ease infinite;
        color: #333;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    tr th {
        text-align: center;
        max-width: 200px;
        font-size: 20px;
        font-style: italic;
        font-family: Century Gothic;
    }

    tr td {
        max-width: 200px;
        height: 150px;
        max-height: 150px;
        color: midnightblue;
        font-size: 18px;
        font-family: CityBlueprint;
    }

    #zdjecie {
        height: 145px;
        width: 145px;
        border: solid 2px grey;
        border-radius: 15px;
    }

    .srodkowanie {
        line-height: 135px;
        text-align: center;
    }

    h1 {
        font-family: Kristen ITC;
        text-align: center;
        font-size: 50px;
        padding-top: 30px;
        padding-bottom: 40px;
        text-shadow: 3px 3px 5px grey;
    }

    p {
        font-size: 30px;
        font-family: Century Gothic;
    }
</style>
@{
    ViewData["Title"] = "KoszykAdmin";
}

<h1>Koszyki Uzytkownikow - Panel Admina</h1>
<!--Sprawdza, czy model jest pusty-->
@if (!Model.Any())
{
    <p>Klienci nie mają nic w koszykach</p>
}
else{
<!--Tabela ze spisem zawartości koszyków wszystkich użytkowników-->
<table class="table">
    <thead>
        <tr>
            <th>E-Mail Użytkownika</th>
            <th>Nazwa Produktów</th>
            <th>Ilość Produktów</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="srodkowanie">@Html.DisplayFor(modelItem => item.Uzytkownik.Email)</td>
                <td class="srodkowanie">@Html.DisplayFor(modelItem => item.Produkt.Nazwa)</td>
                <td class="srodkowanie">@Html.DisplayFor(modelItem => item.Ilosc)</td>
            </tr>
        }
    </tbody>
</table>
}