@model ProjektStrona_EG_IG.Models.Produkt

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj Produkt</h1>

<h4>Produkt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena" class="control-label"></label>
                <input asp-for="Cena" class="form-control" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IloscDostepna" class="control-label"></label>
                <input asp-for="IloscDostepna" class="form-control" />
                <span asp-validation-for="IloscDostepna" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZdjecieUrl" class="control-label"></label>
                <input asp-for="ZdjecieUrl" class="form-control" placeholder="Podaj link do zdjęcia" />
                <span asp-validation-for="ZdjecieUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj Produkt" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>

<!--Sprawdza poprawność danych w formularzu po stronie klienta (przed wysłaniem na serwer)-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
