@model ProjektStrona_EG_IG.Models.Uzytkownik
<style>

    body {
        background: linear-gradient(120deg, #fefcea, #f1daff, #d6f6ff, #ffe5d9);
        background-size: 400% 400%;
        animation: gradientAnimation 15s ease infinite;
        color: #333;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    h1 {
        font-family: Kristen ITC;
        text-align: center;
        font-size: 50px;
        padding-top: 30px;
        padding-bottom: 40px;
        text-shadow: 3px 3px 5px grey;
    }

    .color {
        background-color: lightpink;
        padding: 10px;
    }

    div label {
        font-size: 25px;
        font-family: Century Gothic;
        font-style: italic;
    }

    .przycisk {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 30px;
        background-color: rgb(208,135,169);
        color: black;
        text-decoration: none;
        border-radius: 5px;
        border: 2px solid black;
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        transition: background-color 0.3s, border-color 0.3s;
    }

</style>
@{
    ViewData["Title"] = "Dane Uzytkownika";
}

<h1>Edytuj Profil Uzytkownika</h1>

<form asp-action="DaneUzytkownika" method="post">
    <div class="form-group">
        <label asp-for="Imie" class="control-label">Imię</label>
        <input asp-for="Imie" class="form-control color" />
        <span asp-validation-for="Imie" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nazwisko" class="control-label"></label>
        <input asp-for="Nazwisko" class="form-control color" />
        <span asp-validation-for="Nazwisko" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Adres" class="control-label"></label>
        <input asp-for="Adres" class="form-control color" />
        <span asp-validation-for="Adres" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="KodPocztowy" class="control-label">Kod Pocztowy</label>
        <input asp-for="KodPocztowy" class="form-control color" />
        <span asp-validation-for="KodPocztowy" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefon" class="control-label">Numer Telefonu</label>
        <input asp-for="Telefon" class="form-control color" />
        <span asp-validation-for="Telefon" class="text-danger"></span>
    </div>

    <button style="background-color:RGB(202,158,205);" type="submit" class="btn btn-primary przycisk">Zapisz zmiany</button>
    <a asp-action="Index" class="btn btn-secondary przycisk">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}