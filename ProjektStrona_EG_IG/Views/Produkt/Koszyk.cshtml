@model IEnumerable<ProjektStrona_EG_IG.Models.Koszyk>

@{
    ViewData["Title"] = "Koszyk";
}

<h1>Koszyk</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Uzytkownik.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produkt.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ilosc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Uzytkownik.Email)  <!-- Wyświetlamy email użytkownika -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Produkt.Nazwa)  <!-- Wyświetlamy nazwę produktu -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ilosc)  <!-- Wyświetlamy ilość produktu -->
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
